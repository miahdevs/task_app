<aside class="w-64 bg-white p-4 hidden md:block">
  <div class="flex items-center mb-6">
    <%= link_to dashboard_root_path, class: "flex items-center" do %>
      <img src="https://g-ymwcwrpncbg.vusercontent.net/placeholder.svg" 
            width="32"
            height="32" alt="TaskMaster Logo" class="h-6 w-6">
      <span class="text-xl ml-1 font-bold">TaskMaster</span>
    <% end %>
  </div>
  <nav class="space-y-2">
    <%= link_to dashboard_root_path, class: "w-full flex items-center justify-start px-4 py-2 text-sm font-medium bg-black text-white rounded-md" do %>
      <i data-lucide="list-todo" class="mr-2 h-4 w-4"></i>
      Tasks
    <% end %>
    <%= link_to dashboard_projects_path, class: "w-full flex items-center justify-start px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md" do %>
      <i data-lucide="folder" class="mr-2 h-4 w-4"></i>
      Projects
    <% end %>
    <%= link_to dashboard_categories_path, class: "w-full flex items-center justify-start px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md" do %>
      <i data-lucide="settings" class="mr-2 h-4 w-4"></i>
      Categories
    <% end %>
  </nav>
  <div class="absolute bottom-4 w-56">
    <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center justify-start px-4 py-2 text-sm font-medium text-red-500 hover:text-red-600" do %>
      <i data-lucide="log-out" class="mr-2 h-4 w-4"></i>
      Log Out
    <% end %>
  </div>
